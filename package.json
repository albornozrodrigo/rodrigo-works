{
  "name": "vite-react",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "dev": "vite --port 5173 --strictPort",
    "build": "tsc -b && vite build",
    "build-all": "pnpm build:client && pnpm build:server",
    "build:client": "tsc -b && vite build --outDir ./dist/client --ssrManifest",
    "build:server": "tsc -b && vite build --ssr ./src/entry-server.tsx --outDir ./dist/server",
    "lint": "eslint .",
    "preview": "vite preview"
  },
  "dependencies": {
    "@module-federation/vite": "^1.8.1",
    "@originjs/vite-plugin-federation": "^1.4.1",
    "@tailwindcss/vite": "^4.1.13",
    "express": "^5.1.0",
    "framer-motion": "^12.23.19",
    "lucide-react": "^0.544.0",
    "path": "^0.12.7",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "react-router-dom": "^7.9.2",
    "tailwindcss": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.0",
    "@types/node": "^24.5.2",
    "@types/react": "^19.1.13",
    "@types/react-dom": "^19.1.9",
    "@vitejs/plugin-react": "^5.0.3",
    "daisyui": "^5.1.14",
    "eslint": "^9.9.0",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.9",
    "globals": "^16.4.0",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.0.1",
    "vite": "^7.1.7"
  }
}
